<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otp_gradient_background"
    android:padding="5dp"
    tools:context=".view.LoginActivity">

    <ImageView
        android:id="@+id/otp_mascot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/owl_64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/img_desc" />

    <TextView
        android:id="@+id/otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almost There!"
        android:textSize="30sp"
        android:textColor="@color/green_bright"
        android:textStyle="bold"
        android:fontFamily="@font/comic_neue_bold"
        app:layout_constraintTop_toBottomOf="@id/otp_mascot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/otp_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We sent a special code to your parent's phone. Enter it below to start your adventure!"
        android:textSize="16sp"
        android:textColor="@color/navy_blue"
        android:fontFamily="@font/comic_neue_bold"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/otp_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/otp_input_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/otp_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Magic Code"
                android:textSize="18sp"
                android:textColor="@color/navy_blue"
                android:textStyle="bold"
                android:fontFamily="@font/comic_neue_bold"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_magic_wand"
                android:drawablePadding="8dp" />

            <LinearLayout
                android:id="@+id/otp_digits_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/otp_digit_1"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@drawable/otp_digit_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:fontFamily="@font/comic_neue_bold"
                    android:layout_margin="4dp"
                    android:importantForAccessibility="yes"
                    android:contentDescription="First digit" />

                <EditText
                    android:id="@+id/otp_digit_2"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@drawable/otp_digit_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:fontFamily="@font/comic_neue_bold"
                    android:layout_margin="4dp"
                    android:contentDescription="Second digit" />

                <EditText
                    android:id="@+id/otp_digit_3"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@drawable/otp_digit_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:fontFamily="@font/comic_neue_bold"
                    android:layout_margin="4dp"
                    android:contentDescription="Third digit" />

                <EditText
                    android:id="@+id/otp_digit_4"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@drawable/otp_digit_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:fontFamily="@font/comic_neue_bold"
                    android:layout_margin="4dp"
                    android:contentDescription="Fourth digit" />

                <EditText
                    android:id="@+id/otp_digit_5"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@drawable/otp_digit_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:fontFamily="@font/comic_neue_bold"
                    android:layout_margin="4dp"
                    android:contentDescription="Fifth digit" />

                <EditText
                    android:id="@+id/otp_digit_6"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@drawable/otp_digit_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:fontFamily="@font/comic_neue_bold"
                    android:layout_margin="4dp"
                    android:contentDescription="Sixth digit" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyOtpButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Let's Go!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/comic_neue_bold"
        app:cornerRadius="32dp"
        app:backgroundTint="@color/green_bright"
        app:rippleColor="@color/green_light"
        app:icon="@drawable/ic_check_circle"
        app:iconSize="28dp"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/otp_input_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <LinearLayout
        android:id="@+id/resend_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/verifyOtpButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/resend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't get the code? "
            android:textSize="14sp"
            android:textColor="@color/purple_medium"
            android:fontFamily="@font/comic_neue_bold" />

        <TextView
            android:id="@+id/resend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send again"
            android:textSize="14sp"
            android:textColor="@color/orange_bright"
            android:textStyle="bold"
            android:fontFamily="@font/comic_neue_bold"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>


    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can request a new code in 30 seconds"
        android:textSize="12sp"
        android:textColor="@color/purple_light"
        android:fontFamily="@font/comic_neue_bold"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/resend_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />





</androidx.constraintlayout.widget.ConstraintLayout>